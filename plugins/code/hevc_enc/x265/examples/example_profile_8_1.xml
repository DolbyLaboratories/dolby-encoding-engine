<?xml version="1.0"?>
<job_config>
    <input>
        <video>
            <mxf>
                <file_name>FILE_NAME</file_name>
                <storage>
                    <local>
                        <path>PATH</path>
                    </local>
                </storage>
            </mxf>
        </video>
    </input>
    <filter>
        <video>
            <dv_mezz_to_dv_profile_8_1>
                <encode_start>0</encode_start>
                <encode_end>0</encode_end>
                <metadata_offset>0</metadata_offset>
                <active_area_offset_top>0</active_area_offset_top>
                <active_area_offset_bottom>0</active_area_offset_bottom>
                <active_area_offset_left>0</active_area_offset_left>
                <active_area_offset_right>0</active_area_offset_right>
                <gx>-1</gx>
                <gy>-1</gy>
                <bx>-1</bx>
                <by>-1</by>
                <rx>-1</rx>
                <ry>-1</ry>
                <wpx>-1</wpx>
                <wpy>-1</wpy>
                <max_cll>-1</max_cll>
                <max_fall>-1</max_fall>
                <j2k_parallel_frames>1</j2k_parallel_frames>
                <prepend_frames>0</prepend_frames>
                <target_width>0</target_width>
                <target_height>0</target_height>
                <max_scene_frames>256</max_scene_frames>
                <data_rate>16000</data_rate>
                <max_vbv_data_rate>16000</max_vbv_data_rate>
                <vbv_buffer_size>32000</vbv_buffer_size>
                <encode_pass_num>2</encode_pass_num>
                <disable_md_postproc>false</disable_md_postproc>
                <j2k_dec>
                    <base/>
                </j2k_dec>
                <scaling>
                    <base/>
                </scaling>
                <noise>
                    <base>
                        <strength>0</strength>
                    </base>
                </noise>
                <hevc_enc>
                    <x265>
                        <preset>slow</preset>
                        <tune>grain</tune>
                        <open_gop>false</open_gop>
                        <max_intra_period>48</max_intra_period>
                        <min_intra_period>48</min_intra_period>
                        <intra_refresh>false</intra_refresh>
                        <max_bframes>4</max_bframes>
                        <scenecut>0</scenecut>
                        <scenecut_bias>0</scenecut_bias>
                        <lookahead_frames>48</lookahead_frames>
                        <info>false</info>
                        <frame_threads>0</frame_threads>
                        <nr_inter>400</nr_inter>
                        <nr_intra>100</nr_intra>
                        <cbqpoffs>-5</cbqpoffs>
                        <crqpoffs>-5</crqpoffs>
                        <min_cu_size>8</min_cu_size>
                        <max_cu_size>64</max_cu_size>
                        <qg_size>32</qg_size>
                        <rc_grain>true</rc_grain>
                        <level_idc>0</level_idc>
                        <psy_rd>5.0</psy_rd>
                        <profile>auto</profile>
                    </x265>
                </hevc_enc>
            </dv_mezz_to_dv_profile_8_1>
        </video>
    </filter>
    <output>
        <hevc>
            <file_name>FILE_NAME</file_name>
            <storage>
                <local>
                    <path>PATH</path>
                </local>
            </storage>
        </hevc>
    </output>
    <misc>
        <temp_dir>
            <clean_temp>true</clean_temp>
            <path>PATH</path>
        </temp_dir>
    </misc>
</job_config>
