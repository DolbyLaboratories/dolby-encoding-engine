<?xml version="1.0"?>
<job_config>
    <input>
        <video>
            <hevc>
                <frame_rate>FRAME_RATE</frame_rate>
                <dv_profile>none</dv_profile>
                <file_name>FILE_NAME</file_name>
                <storage>
                    <local>
                        <path>PATH</path>
                    </local>
                </storage>
            </hevc>
        </video>
    </input>
    <filter>
        <video>
            <transcode_to_hevc>
                <encode_start>0</encode_start>
                <encode_end>0</encode_end>
                <target_width>0</target_width>
                <target_height>0</target_height>
                <data_rate>15000</data_rate>
                <max_vbv_data_rate>15000</max_vbv_data_rate>
                <vbv_buffer_size>30000</vbv_buffer_size>
                <encode_pass_num>1</encode_pass_num>
                <decoder>
                    <hevc_dec>
                        <impact>
                            <use_sps_frame_rate>false</use_sps_frame_rate>
                        </impact>
                    </hevc_dec>
                </decoder>
                <scaling>
                    <base/>
                </scaling>
                <hevc_enc>
                    <x265>
                        <preset>slow</preset>
                        <tune>grain</tune>
                        <open_gop>false</open_gop>
                        <max_intra_period>48</max_intra_period>
                        <min_intra_period>48</min_intra_period>
                        <intra_refresh>false</intra_refresh>
                        <max_bframes>4</max_bframes>
                        <scenecut>0</scenecut>
                        <scenecut_bias>0</scenecut_bias>
                        <lookahead_frames>50</lookahead_frames>
                        <info>false</info>
                        <frame_threads>0</frame_threads>
                        <nr_inter>400</nr_inter>
                        <nr_intra>100</nr_intra>
                        <cbqpoffs>0</cbqpoffs>
                        <crqpoffs>0</crqpoffs>
                        <min_cu_size>8</min_cu_size>
                        <max_cu_size>64</max_cu_size>
                        <qg_size>32</qg_size>
                        <rc_grain>true</rc_grain>
                        <level_idc>0</level_idc>
                        <psy_rd>5.0</psy_rd>
                        <profile>auto</profile>
                    </x265>
                </hevc_enc>
            </transcode_to_hevc>
        </video>
    </filter>
    <output>
        <hevc>
            <file_name>FILE_NAME</file_name>
            <storage>
                <local>
                    <path>PATH</path>
                </local>
            </storage>
        </hevc>
    </output>
    <misc>
        <temp_dir>
            <clean_temp>true</clean_temp>
            <path>PATH</path>
        </temp_dir>
    </misc>
</job_config>
