<?xml version="1.0"?>
<job_config>
    <input>
        <video>
            <hevc>
                <frame_rate>FRAME_RATE</frame_rate>
                <dv_profile>none</dv_profile>
                <file_name>FILE_NAME</file_name>
                <storage>
                    <local>
                        <path>PATH</path>
                    </local>
                </storage>
            </hevc>
        </video>
    </input>
    <filter>
		<video>
			<sdr_to_dv_profile_4_2>
                <el_data_rate>5000</el_data_rate>
                <el_max_vbv_data_rate>5000</el_max_vbv_data_rate>
                <el_vbv_buffer_size>10000</el_vbv_buffer_size>
                <encode_pass_num>1</encode_pass_num>
                <max_light_level>4000</max_light_level>
                <disable_md_postproc>false</disable_md_postproc>
                <hevc_dec>
                    <impact>
                        <use_sps_frame_rate>false</use_sps_frame_rate>
                    </impact>
                </hevc_dec>
                <hevc_enc>
                    <x265>
                        <preset>fast</preset>
                        <tune>grain</tune>
                        <open_gop>false</open_gop>
                        <max_intra_period>48</max_intra_period>
                        <min_intra_period>48</min_intra_period>
                        <intra_refresh>false</intra_refresh>
                        <max_bframes>8</max_bframes>
                        <scenecut>0</scenecut>
                        <scenecut_bias>0</scenecut_bias>
                        <lookahead_frames>50</lookahead_frames>
                        <info>false</info>
                        <frame_threads>0</frame_threads>
                        <nr_inter>400</nr_inter>
                        <nr_intra>100</nr_intra>
                        <cbqpoffs>0</cbqpoffs>
                        <crqpoffs>0</crqpoffs>
                        <min_cu_size>8</min_cu_size>
                        <max_cu_size>64</max_cu_size>
                        <qg_size>32</qg_size>
                        <rc_grain>true</rc_grain>
                        <level_idc>0</level_idc>
                        <psy_rd>0</psy_rd>
                        <profile>auto</profile>
                    </x265>
                </hevc_enc>
			</sdr_to_dv_profile_4_2>
		</video>
    </filter>
    <output>
        <hevc>
            <file_name>FILE_NAME</file_name>
            <storage>
                <local>
                    <path>PATH</path>
                </local>
            </storage>
        </hevc>
    </output>
    <misc>
        <temp_dir>
            <clean_temp>true</clean_temp>
            <path>PATH</path>
        </temp_dir>
    </misc>
</job_config>
