<?xml version="1.0"?>
<job_config>
    <input>
        <video>
            <hevc>
                <frame_rate>FRAME_RATE</frame_rate>
                <dv_profile>none</dv_profile>
                <file_name>FILE_NAME</file_name>
                <storage>
                    <local>
                        <path>PATH</path>
                    </local>
                </storage>
            </hevc>
        </video>
    </input>
    <filter>
        <video>
            <sdr_to_dv_profile_4_2>
                <el_data_rate>5000</el_data_rate>
                <el_max_vbv_data_rate>5000</el_max_vbv_data_rate>
                <el_vbv_buffer_size>10000</el_vbv_buffer_size>
                <encode_pass_num>1</encode_pass_num>
                <max_light_level>4000</max_light_level>
                <disable_md_postproc>false</disable_md_postproc>
                <hevc_dec>
                    <ffmpeg>
                        <ffmpeg_bin>/absolute/path/to/ffmpeg</ffmpeg_bin>
                        <width>OUTPUT_WIDTH</width>
                        <height>OUTPUT_HEIGHT</height>
                        <cmd_gen>/absolute/path/to/cmd_gen_hevc_dec_ffmpeg.py</cmd_gen>
                        <interpreter>python</interpreter>
                    </ffmpeg>
                </hevc_dec>
                <hevc_enc>
                    <impact>
                        <speed_mode>10</speed_mode>
                        <max_intra_period>48</max_intra_period>
                        <min_intra_period>48</min_intra_period>
                        <max_minigop_size>8</max_minigop_size>
                        <fix_gop_structure>true</fix_gop_structure>
                        <lookahead_frames>50</lookahead_frames>
                        <concatenation_flag>false</concatenation_flag>
                        <max_cra_period>0</max_cra_period>
                        <deblocking_filter_params_alpha>0</deblocking_filter_params_alpha>
                        <deblocking_filter_params_beta>0</deblocking_filter_params_beta>
                        <cu_qp_modulation>3</cu_qp_modulation>
                        <qp_modulation_strength>256</qp_modulation_strength>
                        <psyrd_params_strength>256</psyrd_params_strength>
                        <psyrd_params_strengthq>256</psyrd_params_strengthq>
                        <force_cb_qp_offset>0</force_cb_qp_offset>
                        <force_cr_qp_offset>0</force_cr_qp_offset>
                        <max_reference_pics>5</max_reference_pics>
                        <generate_psnr>false</generate_psnr>
                        <level>unknown</level>
                    </impact>
                </hevc_enc>
            </sdr_to_dv_profile_4_2>
        </video>
    </filter>
    <output>
        <hevc>
            <file_name>FILE_NAME</file_name>
            <storage>
                <local>
                    <path>PATH</path>
                </local>
            </storage>
        </hevc>
    </output>
    <misc>
        <temp_dir>
            <clean_temp>true</clean_temp>
            <path>PATH</path>
        </temp_dir>
    </misc>
</job_config>
